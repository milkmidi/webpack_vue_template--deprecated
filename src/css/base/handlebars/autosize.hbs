{{!--
.sprite{
  background-image: url({{{escaped_image}}});
}
--}}

{{#each sprites}}
.{{name}}.sprite{{#unless @last}}, {{/unless}}
{{/each}}
{
    background: url({{{spritesheet.escaped_image}}}) no-repeat; }

{{#each sprites}}
.{{name}}.autosize::before{{#unless @last}}, {{/unless}}
{{/each}}
{
    content:'';
    display:block;  }

{{#sprites}}
.{{name}} {
    background-position: {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};  }
{{/sprites}}

{{#sprites}}
.{{name}}.autosize {    
    background-position: {{bgPosition total_width width offset_x}} {{bgPosition total_height height offset_y}};
    background-size: {{percent total_width width}} auto;    }
    .{{name}}.autosize::before{        
        padding-top:{{percent height width}};     }
{{/sprites}}

{{#each sprites}}
.{{name}}.autosize{{#unless @last}}, {{/unless}}
{{/each}}    
{
    width:100%;
    height:auto;    
}